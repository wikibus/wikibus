PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX dash: <http://datashapes.org/dash#>
PREFIX schema: <http://schema.org/>
PREFIX sh: <http://www.w3.org/ns/shacl#>
prefix rs: <https://hypermedia.app/roadshow#>
PREFIX hex: <https://w3id.org/hydra/extension#>
prefix canvas: <https://themes.semicolonweb.com/canvas/>
PREFIX wba: <https://schema.wikibus.org/>
PREFIX dbo: <http://dbpedia.org/ontology/>

<>
  a sh:NodeShape ;
  sh:and ( </api/schema/WebPage> ) ;
  sh:property
    [
      sh:order 50 ;
      sh:path schema:mainEntity ;
      sh:name "brand" ;
      sh:group </page/_element/main#gutters> ;
      rs:dereference true ;
      dash:viewer dash:DetailsViewer ;
      sh:node
        [
          sh:property
            [
              sh:path schema:image ;
              sh:maxCount 1 ;
              dash:viewer hex:ImageViewer ;
              sh:group _:ImageGroup ;
              sh:order 1 ;
            ],
            [
              sh:path schema:text ;
              sh:datatype rdf:HTML ;
              sh:group _:DefaultBodyGroup ;
              sh:order 2 ;
            ],
            [
              sh:path wba:dbpediaLink ;
              sh:group _:DefaultBodyGroup ;
              dash:viewer dash:DetailsViewer ;
              sh:order 3 ;
              sh:node
                [
                  sh:property
                    [
                      sh:path rdfs:label ;
                      dash:viewer dash:HTMLViewer ;
                      sh:order 1 ;
                      sh:values
                        [
                          dash:js """
                            <h4>Wikipedia abstract</h4>
                          """
                        ] ;
                    ],
                    [
                      sh:path dbo:abstract ;
                      dash:viewer dash:SingleLiteralViewer ;
                      sh:order 2 ;
                      rs:propertyContainer "p" ;
                    ],
                    [
                      sh:path rdfs:label ;
                      dash:viewer dash:HTMLViewer ;
                      sh:order 3 ;
                      sh:values
                        [
                          dash:js """
                            <h5>See more on wikipedia</h5>
                          """
                        ] ;
                    ],
                    [
                      sh:path [ sh:inversePath schema:about ] ;
                      sh:order 4 ;
                      rs:propertyContainer "canvas-icon-list[inline]" ;
                      dash:viewer canvas:IconListItem ;
                      canvas:icon "icon-line-external-link" ;
                    ] ;
                ] ;
            ] ;
        ] ;
    ],
    [
    # Properties populated in template
      sh:order 50 ;
      sh:path schema:mainEntity ;
      sh:name "brand" ;
      sh:group </page/_element/main#gutters> ;
      dash:viewer dash:DetailsViewer ;
      sh:node
        [
          sh:property
            [
              sh:name "Buses & coaches" ;
              sh:path skos:narrower ;
              sh:group _:SidebarGroup ;
              sh:order 1 ;
              dash:viewer canvas:SidebarRelatedResourceViewer ;
              sh:class wba:BusOrCoach ;
            ],
            [
              sh:name "Trolleybuses" ;
              sh:path skos:narrower ;
              sh:group _:SidebarGroup ;
              sh:order 2 ;
              dash:viewer canvas:SidebarRelatedResourceViewer ;
              sh:class wba:Trolleybus ;
            ],
            [
              sh:name "Trams" ;
              sh:path skos:narrower ;
              sh:group _:SidebarGroup ;
              sh:order 3 ;
              dash:viewer canvas:SidebarRelatedResourceViewer ;
              sh:class wba:Tram ;
            ],
            [
              sh:name "Chassis" ;
              sh:path skos:narrower ;
              sh:group _:SidebarGroup ;
              sh:order 4 ;
              dash:viewer canvas:SidebarRelatedResourceViewer ;
              sh:class wba:Chassis ;
            ] ;
        ] ;
    ],
    [
      sh:order 60 ;
      sh:path schema:mainEntity ;
      sh:name "brand" ;
      sh:group </page/_element/main> ;
      dash:viewer hex:CommentsViewer ;
    ],
    [
      sh:name "Edit" ;
      sh:path schema:mainEntity ;
      dash:viewer hex:ResponseLinkViewer ;
      <https://www.w3.org/ns/iana/link-relations/relation> "edit-form" ;
      sh:group </page/_element/sub-menu> ;
    ] ;
.

_:ImageGroup
  rs:selector "div#main-image" ;
.

_:DefaultBodyGroup
  rs:selector "div.postcontent.col-lg-9.order-lg-last" ;
  sh:order 1 ;
.

_:SidebarGroup
  rs:selector "div.sidebar.col-lg-3 div.sidebar-widgets-wrap" ;
  sh:order 2 ;
.
