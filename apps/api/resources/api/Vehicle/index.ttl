PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX dash: <http://datashapes.org/dash#>
PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
PREFIX sh: <http://www.w3.org/ns/shacl#>
PREFIX schema: <http://schema.org/>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX hydra: <http://www.w3.org/ns/hydra/core#>
PREFIX code: <https://code.described.at/>
PREFIX wba: <https://schema.wikibus.org/>
prefix knossos: <https://hypermedia.app/knossos#>
prefix sh1: <https://hypermedia.app/shaperone#>

<>
  a hydra:Class, sh:NodeShape, rdfs:Class ;
  rdfs:subClassOf </api/VehicleConcept>, hydra:Resource ;
  hydra:supportedOperation
    [
      a schema:ReplaceAction ;
      hydra:title "Save" ;
      hydra:method "PUT" ;
      hydra:expects <> ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <node:@hydrofoil/knossos/resource#PUT> ;
        ] ;
    ] ;
  sh:property
    [
      sh:name "Full Name", "Pełna Nazwa"@pl ;
      sh:path skos:prefLabel ;
      sh:minCount 1 ;
      sh:minLength 1 ;
      sh:uniqueLang true ;
      sh:order 3 ;
      sh:or
        (
          [ sh:datatype rdf:langString ]
          [ sh:datatype xsd:string ]
        ) ;
      sh:group _:Default ;
    ],
    [
      sh:name "Name", "Nazwa"@pl ;
      sh:path schema:name ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:minLength 1 ;
      sh:order 1 ;
      sh:group _:Default ;
    ],
    [
      sh:name "Supertype", "Typ nadrzędny"@pl ;
      sh:path skos:broader ;
      sh:minCount 1 ;
      sh:maxCount 1 ;
      sh:minLength 1 ;
      sh:order 2 ;
      dash:editor dash:AutoCompleteEditor ;
      sh:group _:Default ;
      hydra:search
        [
          hydra:template "/vehicle-concepts{?q}" ;
          hydra:mapping
            [
              hydra:variable "q" ;
              hydra:property hydra:freetextQuery ;
              sh:minLength 3 ;
            ] ;
        ] ;
    ],
    _:LinksProperty,
    _:TypeProperty
.

_:Default
  rdfs:label "Base information" ;
  sh:order 0 ;
.

_:LinksGroup
  rdfs:label "Links" ;
  sh:order 1 ;
  knossos:groupProperty _:LinksProperty ;
.

_:LinksProperty
  sh:path rdfs:seeAlso ;
  sh:nodeKind sh:IRI ;
  dash:editor dash:URIEditor ;
.

_:TypeProperty
  sh:name "Type", "Typ"@pl ;
  sh:path rdf:type ;
  hydra:collection </product-types?super=https://schema.wikibus.org/Vehicle> ;
  sh:minCount 1 ;
  sh:deactivated true ;
  sh:order 4 ;
  dash:editor dash:InstancesSelectEditor ;
  sh:group _:Default ;
  sh1:except _:MandatoryTypes ;
.

_:TypeValidationProperty
  dash:hidden true  ;
  sh:path rdf:type ;
  sh:group _:Default ;
  sh:hasValue _:MandatoryTypes ;
.

_:MandatoryTypes
  rdf:first <> ;
  rdf:rest ( wba:Vehicle )
.
