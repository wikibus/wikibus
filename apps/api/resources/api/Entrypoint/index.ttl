PREFIX hydra: <http://www.w3.org/ns/hydra/core#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX dash: <http://datashapes.org/dash#>
PREFIX sh: <http://www.w3.org/ns/shacl#>
PREFIX schema: <http://schema.org/>
prefix rs: <https://hypermedia.app/roadshow#>
prefix wba: <https://wikibus.org/api#>

<>
  a rdfs:Class, sh:NodeShape ;
  rdfs:subClassOf schema:EntryPoint ;
  sh:targetClass schema:EntryPoint ;
  rs:shapeRole wba:Content ;
  sh:and ( </api/schema/WebPage> ) ;
.

<#MainMenuShape>
  a sh:NodeShape ;
  sh:targetClass schema:EntryPoint ;
  rs:shapeRole wba:MainMenu ;
  sh:property
    [
      sh:order 1 ;
      sh:path wba:home ;
      sh:name "Home"@en ;
      dash:viewer dash:LabelViewer ;
    ],
    [
      sh:order 2 ;
      sh:path wba:catalog ;
      sh:name "Catalog"@en ;
      dash:viewer dash:LabelViewer ;
    ] ;
.
